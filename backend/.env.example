# Database
DATABASE_URL=postgresql://lms_user:password@localhost:5432/lms_dev?connection_limit=10&pool_timeout=30

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=your_access_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# CORS
CORS_ORIGIN=http://localhost:5173

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Maintenance Mode
# Set to 'true' to enable maintenance mode (returns 503 for all requests except /health)
MAINTENANCE_MODE=false
