# .env.example
# Environment Configuration Template for Local Development
# Copy this file to .env and update the values

# ========================================
# Database Configuration
# ========================================
# For Docker Compose (postgres service)
DB_NAME=lms_dev
DB_USER=lms_user
DB_PASSWORD=dev_password

# For Backend Application (complete connection string)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://lms_user:dev_password@localhost:5432/lms_dev

# ========================================
# Backend Configuration
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# JWT Authentication
# ========================================
# IMPORTANT: Generate secure secrets for production
# Use: openssl rand -base64 32
JWT_ACCESS_SECRET=dev_access_secret_min_32_chars_long
JWT_REFRESH_SECRET=dev_refresh_secret_min_32_chars_long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=http://localhost:5173

# ========================================
# File Storage Configuration
# ========================================
STORAGE_TYPE=local
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3000

# ========================================
# Optional: Monitoring (Sentry)
# ========================================
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development
